.chat-main
  .chat-main__group-info
    %ul
      %li.chat-main__group-info-name
        = @group.name
      %li.chat-main__group-info-member :Menber
      - @group.users.each do |user|
        = user.name
      
    .chat-edit
      = link_to "/groups/#{@group.id}/edit", class:"edit" do
        %p.edit-btn Edit

  .chat-main__message-list
    .messages
      = render @messages
      
      .message-info
        %p.chat-name kouji
        %p.chat-date 2020/3/4(wed) 17:30
      .chat-message おはようございます！
      .message-info
        %p.chat-name kouji
        %p.chat-date 2020/3/5(wed) 17:30
      .chat-message こんにちは！
    
  .chat-main__message-form
    = form_for [@group, @message] do |f|
      = f.text_field :content, class: 'input-box__text', placeholder: 'type a message'
      .input-box
        = f.label :image, class: 'input-box__text' do
          = icon('fas', 'image', class: 'icon')
          = f.file_field :image, class: 'input-box__image__file'
        = f.submit 'Send', class: 'submit-btn'
