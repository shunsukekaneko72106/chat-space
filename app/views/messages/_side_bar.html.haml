.side-ber
  .side-ber_user-name
    .top-items
      .top-items__name
      = current_user.name
      .top-items__icons
      = link_to new_group_path do
        %li.top-items__icons__edit-user
          = link_to "/groups/new" do
            %i.far.fa-edit
        %li.top-items__icons__edit-group
          = link_to edit_user_path(current_user) do
            %i.fas.fa-user-edit
  .groups
    - current_user.groups.each do |group|
      = link_to group_messages_path(group) do

        %p.group__group-name
          = group.name
        %p.group__group-message
          = group.show_last_message
         
      -# = link_to "#", class:"group" do